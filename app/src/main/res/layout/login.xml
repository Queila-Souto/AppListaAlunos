<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/backgroud_app">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/backgroud_app">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/backgroud_app">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/top_background1" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="@color/Login_primary"
                android:text="@string/bem_vindo" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:drawableStart="@drawable/email"
                android:hint="@string/email"
                android:background="@drawable/edittext_background"
                android:textColorHint="@color/Login_edittext"
                android:textColor="@color/text"
                />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:ems="10"
                android:inputType="textWebPassword|textPassword"
                android:drawableStart="@drawable/password"
                android:hint="@string/senha"
                android:background="@drawable/edittext_background"
                android:textColorHint="@color/Login_edittext"
                android:textColor="@color/text"
                />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="end"
                android:layout_margin="16dp"
                android:layout_marginEnd="32dp"
                app:srcCompat="@drawable/btn_arraw1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="16dp"
                android:backgroundTint="@color/backgroud_app">

                <Button
                    android:id="@+id/button"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:drawableEnd="@drawable/facebook"
                    android:layout_weight="1"
                    android:text="Facebook"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:background="@drawable/button_background" />

                <Button
                    android:id="@+id/button2"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:drawableEnd="@drawable/google"
                    android:layout_weight="1"
                    android:text="Google"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:background="@drawable/button_background" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Novo usuÃ¡rio? Clique aqui"
                android:layout_margin="16dp"
                android:textColor="@color/text"
                android:textAlignment="center"
                android:textStyle="bold"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>